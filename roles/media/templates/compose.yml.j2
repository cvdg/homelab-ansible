services:
  jellyfin:
    image: docker.io/jellyfin/jellyfin
    container_name: jellyfin
    volumes:
      - /srv/media/jellyfin/config:/config
      - /mnt/media:/media:ro
    ports:
      - 8096:8096
    environment:
      - PUID=1001
      - PGID=1001
      - TZ=Europe/Amsterdam
    restart: 'unless-stopped'